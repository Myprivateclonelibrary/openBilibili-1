load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "alt_exit.go",
        "doc.go",
        "entry.go",
        "exported.go",
        "formatter.go",
        "hooks.go",
        "json_formatter.go",
        "logger.go",
        "logrus.go",
        "terminal_bsd.go",
        "terminal_linux.go",
        "terminal_notwindows.go",
        "terminal_solaris.go",
        "terminal_windows.go",
        "text_formatter.go",
        "writer.go",
    ],
    importmap = "go-common/vendor/github.com/sirupsen/logrus",
    importpath = "github.com/sirupsen/logrus",
    visibility = ["//visibility:public"],
    deps = select({
        "@io_bazel_rules_go//go/platform:solaris": [
            "//vendor/golang.org/x/sys/unix:go_default_library",
