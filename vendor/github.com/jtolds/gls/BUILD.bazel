load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "context.go",
        "gen_sym.go",
        "gid.go",
        "id_pool.go",
        "stack_tags.go",
        "stack_tags_main.go",
