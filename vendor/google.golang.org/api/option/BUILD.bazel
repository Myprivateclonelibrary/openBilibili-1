load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = ["option.go"],
    importmap = "k8s.io/test-infra/vendor/google.golang.org/api/option",
    importpath = "google.golang.org/api/option",
    visibility = ["//visibility:public"],
    deps = [
