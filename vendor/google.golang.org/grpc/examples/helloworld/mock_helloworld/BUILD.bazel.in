    srcs = ["hw_mock_test.go"],
    embed = [":go_default_library"],
    deps = [
        "//examples/helloworld/helloworld:go_default_library",
        "@com_github_golang_mock//gomock:go_default_library",
        "@com_github_golang_protobuf//proto:go_default_library",
